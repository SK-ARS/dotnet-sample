@{
    ViewBag.Title = "Create Candidate Route";
    bool isAdmin = false;
    int portalType = 0;
    if (Session["UserInfo"] != null)
    {
        var user = (STP.Domain.SecurityAndUsers.UserInfo)Session["UserInfo"];
        portalType = user.UserTypeId;
        if (portalType == 696006 || user.IsAdmin == 1)
        {
            isAdmin = true;
        }
    }
}
<div class="modal-header pt-3 pb-3 pr-3 pl-3 pb-3s" style="display: contents;">
    <div class="row" style="margin-top: -1rem;">
        <div class="col-lg-9 col-sm-7 col-md-7 pl-4 pt-8">
            <span class="text-normal pr-2 dyntitleConfig"
                  style="font-family: lato_light;font-size:25px;margin-top: -2rem;float: right;">               
            </span>
        </div>
        <div class="col-lg-3 col-sm-5 col-md-5 pr-4">
            <div style="justify-content: end;" id="table-head">               
                <span aria-hidden="true" class="close pl-0 ml-2 pt-1"
                      id="spanCloseGeneralPopup"
                      data-dismiss="modal" aria-label="Close" 
                      style="cursor:pointer;">&times;</span>
            </div>
        </div>
    </div>
</div>

<span class="PopupHelpName" id="CreateCandidateRoute"></span>
<div class="row pl-4 pr-4">
    <div class="row pb-4">
        <div class="col-lg-6 col-md-6 col-sm-6 text-normal">
            Candidate route name
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6">
            <input type="text" id="txtcandidateroutename" maxlength="100" />
            <span id="trvalidcandname" class="error invalid-feedback">Candidate route name is required</span>
        </div>
    </div>
    @if (ViewBag.LatestCandRevId != 0)
    {
        <div class="row pb-4">
            <div class="col-lg-6 col-md-6 col-sm-6 text-normal">
                Select route
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <select class="form-select text-normal select1" id="ddlroutes">
                    <option value="0">----Select routes----</option>
                    <option value="ApplicationRT">Application routes</option>
                    <option value="CandidateRT">Latest candidate routes</option>
                </select>
                <span id="trvalidcandrt" class="error invalid-feedback" style="display:none">Required</span>
            </div>
        </div>
    }
    <div class="row pb-2">
        <div class="flexer text-align-center pt-2 pb-4 pl-6 pr-4" style="margin-left: auto;margin-right: auto;">
            <div class="button main-button mr-2">
                <button class="btn btn-outline-primary btn-normal pl-8 pr-8 site-button" role="button" aria-pressed="true" id="btncandidatesave">
                    SAVE
                </button>
            </div>
            <div class="button main-button mr-2">
                <button id="btnCloseGeneralPopup" class="btn btn-outline-primary btn-normal pl-7 pr-7 site-button" role="button" aria-pressed="true" 
                        >
                    CANCEL
                </button>
            </div>

        </div>
    </div>
</div>

@{
    <input type="hidden" value="@ViewBag.LatestCandRevId" id="hf_LatestCandRevId" name="hf_LatestCandRevId" />
}
