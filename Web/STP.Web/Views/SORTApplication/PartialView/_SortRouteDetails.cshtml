@model STP.Domain.Routes.AppRouteList
@{
    var RouteName = "";
    if (Model.RouteName == null)
    {
        RouteName = "Create new route";
    }
    else
    {
        RouteName = Model.RouteName;
    }
}
<style>
    .Headcolour {
        color: rgba(39, 87, 149, 1);
    }

    #filters .sidenav-header span {
        font-size: 30px;
    }

    #filters.sidenav {
        padding-top: 10px;
    }

    .statusinline {
        display: inline-flex;
    }

    .statuslabel {
        padding-left: 5px;
        margin-top: 4px;
    }

    #filter_SORT ::placeholder {
        font-style: italic !important;
        font-family: lato_light, Arial !important;
    }

    .sortfilter .btn.btn-outline-primary:hover {
        color: white;
        background-color: rgba(39, 87, 149, 1);
    }

    .sortfilter .btn.btn-outline-primary:focus {
        color: white;
    }
</style>
<div id="select_route_section">
</div>
<div class="row mt-4">
    @if (@Model != null && @Model.RouteName != "")
    {
        <div class="col-lg-12 col-md-12 col-sm-12 pt-5 Headcolour title">
            @RouteName
        </div>
    }
    else if (ViewBag.IsCandidateModify)
    {
        <div class="col-lg-12 col-md-12 col-sm-12 pt-5 title">
            Create New Route
        </div>
    }

</div>
<div class="row mt-2 main-entry">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="row mb-2">
            <div class="col-sm-2 col-md-2 col-lg-2 pr-0">
                <label class="text-normal">Route start address</label>
            </div>
            <div class="d-flex col-sm-6 col-md-6 col-lg-3 options">
                <img src="~/Content/assets/Icons/map-startpoint.svg" width="15" alt="vehicle-2">
                <span>
                    <input class="edit-normal mlinput" type="text" name="from"
                           value="@Model.FromAddress" style="width: 180%;" title="@Model.FromAddress">
                </span>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-2 col-md-2 col-lg-2 pr-0">
                <label class="text-normal">Route end address</label>
            </div>
            <div class="col-sm-6 col-md-6 col-lg-3 options" style="display: flex; width: 30%">
                <img src="~/Content/assets/Icons/map-endpoint.svg" width="15" alt="vehicle-2">
                <span>
                    <input class="edit-normal mlinput" type="text" name="from"
                           value="@Model.ToAddress" style="width: 180%;" title="@Model.ToAddress">
                </span>
                <!-- <hr> -->
            </div>
            <div class="d-flex col-sm-2 col-md-2 col-lg-1 pr-0 info-card" style="width: 50%">
                <span class="pr-3">
                    @*<div class="text-normal-hyperlink route-info" style="border: 1px solid #275795;">
                            ?
                        </div>*@
                </span>
                <span style="margin-top: -12px;">
                    <div class="button main-button mr-0">
                        @if (@Model != null && @Model.RouteID != 0)
                        {
                            <button class="btn btn-outline-primary btn-normal" role="button"
                                    aria-pressed="true" id="btn-editsort" data-RouteID="@Model.RouteID" data-RouteName="'@Model.RouteName'">
                                VIEW ROUTE
                            </button>
                            if (ViewBag.IsCandidateModify)
                            {
                                <button class="btn btn-outline-primary btn-normal" role="button"
                                        aria-pressed="true" id="btn-deletesort" data-RouteID="@Model.RouteID" data-RouteType="@Model.RouteType" data-RouteName="'@Model.RouteName'">
                                    DELETE ROUTE
                                </button>
                            }
                        }
                        else
                        {
                            if (ViewBag.IsCandidateModify)
                            {
                                <button class="btn btn-outline-primary btn-normal" role="button"
                                        aria-pressed="true" id="btn-create-sort">
                                    PLAN ON MAP
                                </button>
                            }
                        }
                    </div>
                </span>
            </div>
        </div>
    </div>
</div>

@Html.Hidden("IsPrevMoveOpion", "false")
@Html.Hidden("hf_pageflag", Session["pageflag"])

@*<script src="~/Scripts/SORTApplication/PartialView/_SortRouteDetails.js?V@(Session["ProjectVersion"])"></script>*@