@using System.Web.Optimization
@using STP.Domain


@model List<STP.Domain.VehiclesAndFleets.Configuration.AppVehicleConfigList>

<div class="mb-3">
    <div class="main-table movements overflow-hidden" style="position: inherit; width: 65%;">
        <div  class="table-responsive">
            <table class="GridTable tblheaderfix esdal-table">

                <thead>
                    <tr>
                        <th> Vehicle Name</th>
                        <th style="width: 20%;"> Action</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-color1" style="text-align: left;">@item.VehicleName</td>
                                    <td>
                                        @if (ViewBag.IsIsCreateApplication == true)
                                        {
                                            <div class="col-lg-5 col-md-3 col-sm-6">
                                                <button id="btnImportAppVehicle" class="btn outline-btn-primary mr-2 mb-2"
                                                        data-btnImportAppVehicleRoutePartId="@item.RoutePartId"
                                                        data-btnImportAppVehicleVehicleId="@item.VehicleId"
                                                        data-btnImportAppVehicleVehicleName="@item.VehicleName"
                                                        data-btnImportAppVehicleApplVehicle='ApplVehicle'
                                                        aria-hidden="true" data-icon="îƒ´">
                                                    IMPORT
                                                </button>
                                            </div>

                                        }
                                        else
                                        {
                                            <div class="col-lg-5 col-md-3 col-sm-6">
                                                <button id="btnImportVehicle" class="btn outline-btn-primary vehicleactions mr-2 mb-2"
                                                        data-btnImportVehicleVehicleId="@item.VehicleId"
                                                        data-btnImportVehicleVehicleName="@item.VehicleName"
                                                        data-btnImportVehicleVrList='@ViewBag.VRLIST_type'>
                                                    IMPORT
                                                </button>
                                            </div>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td><span style="color: red">Vehicle not found.</span></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
<div class="button main-button mr-0 col-lg-2">
    <button class="btn btn-outline-primary btn-normal" id="btnBactoGenVeh" role="button"
            aria-pressed="true">
        BACK
    </button>
</div>
<style>
    #banner-container {
        padding-bottom: 10px !important;
    }
</style>



