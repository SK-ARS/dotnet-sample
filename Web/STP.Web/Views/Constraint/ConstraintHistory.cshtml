<!-- Bootstrap CSS -->




<body style="overflow-y: auto;">
    <!-- menu-setting -->
    <!-- end of menu-setting -->
    <!-- user-setting -->
    <!-- end of user-setting -->
    <!-- main-content -->
    <section id="banner">
        <div class="container-fluid" id="banner-container">
            <div id="caution">
                <!-- table -->
                <div class="col-lg-12 col-md-12 col-sm-12 header">
                    <div class="title" style="text-align: center;">
                        Constraint/Caution History
                    </div>
                </div>
                <div class="dashboard-table" id="portal-table">
                    <table>
                        <tr>
                            <th style="width: 20%;">&nbsp;  <label>Date And Time</label></th>
                            <th style="width: 20%;"><label>User Name</label></th>
                            <th style="width: 50%; background-color: #275795 !important;">@Resources.Resource.Details</th>
                        </tr>
                        <!-- sample examples -->
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-color1" style="padding-left: 15px;">
                                    @item.OccurredTime
                                </td>
                                <td class="text-color1">
                                    @item.FirstName
                                </td>
                                <td class="text-color1">
                                    @item.HistoryDetails
                                </td>
                            </tr>
                        }
                        @if (ViewBag.TotalCount == 0)
                        {
                            <tr>

                                <td colspan="4" style="text-align: center">
                                    <span style="color: red">No records found</span>
                                </td>
                            </tr>
                        }
                        <!--end sample examples -->
                    </table>
                </div>
                <!-- end of table -->
                <div class="button mr-0 mb-2 mt-4">
                    <button class="btn outline-btn-primary btn-normal btn-ch-close-history" id="btnHistoryBack" type="button" aria-pressed="true"
                            style="width: 230px;float: right;">
                        BACK
                    </button>
                </div>
            </div>
        </div>
    </section>
    <!-- end of main-content -->
    <!-- filter settings -->
    <div id="filters" class="sidenav filter-sidenav">
    </div>
    <!-- end of fikter settings -->
    <!-- bootsrap css for vertical menu bar-->

</body>

</html>

@Html.Hidden("hf_Ch_From", from)
