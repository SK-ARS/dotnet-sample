<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 title">
        Vehicle Component Selection
    </div>
    <div class="col-lg-2 col-md-2 col-sm-2 pt-5">
        <div class="button main-button mr-0">
            <button id="btn_back_to_Config_list" class="btn_back_to_Config_list btn btn-outline-primary ml2" aria-hidden="true" data-icon="&#xe119;" type="button" >Back</button>

        </div>
    </div>
</div>
<div class="col-lg-2 col-md-3 col-sm-4 col-xs-12 card-image">
    <div class="card mr-0">
        <div>
            <img src="~/Content/assets/images/add-icon.svg" class="mt-3" width="50" alt="add-icon"
                 style="mix-blend-mode: darken;">
        </div>
    </div>
    <div class="row head">
        <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12 card-image">
            <div class="mt-3 mb-3 filters" role="button" data-bs-toggle="dropdown"
                 aria-expanded="false">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 pr-4">
                        <span>
                            Choose Component
                            <img class="pt-1" src="~/Content/assets/images/Path-down-chevlon.svg" width="14"
                                 style="float: right;">
                        </span>
                    </div>
                </div>
            </div>
            <ul class="dropdown-menu mt-1" aria-labelledby="movements">
                <li class="pl-4"><a class="dropdown-item edit-normal ImportOption" href="#" flag="createcomponent" >Create new component</a></li>
                @if (!ViewBag.IsCandidate)
                {
                    <hr>
                    <li class="pl-4"><a class="dropdown-item edit-normal" href="#" flag="fleet" >Choose from fleet</a></li>
                    <hr>
                    <li>
                        <a class="dropdown-item text-decorate" href="#">Favourites</a> <hr>
                        <ul class="sub-list" style="padding-left: 0 !important;" id="componentFav">
                        </ul>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
<style>
    .head .dropdown-item {
        color: black;
        font-family: lato_bold;
        font-size: 12px;
    }

    .head .dropdown-menu {
        width: 15rem;
    }
</style>
<script src="~/Scripts/VehicleConfig/SelectVehicleComponent.js?V@(Session["ProjectVersion"])"></script>