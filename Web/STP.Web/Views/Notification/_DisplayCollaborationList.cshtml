@using PagedList.Mvc
@using System.Globalization
@model PagedList.IPagedList<STP.Domain.MovementsAndNotifications.Notification.CollaborationModel>
@{
    int TotalCount = Convert.ToInt32(ViewBag.TotalCount);
}

<div class="pb-4">
    <div class="main-table mt-0 pt-0">
        @Html.Hidden("TotalCount", TotalCount)
        <table>
            <tr>
                <th>Name</th>
                <th>Organisation</th>
                <th>Role</th>
                <th>Date and Time</th>
            </tr>
            @if (Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    <tr class="bgColor3">
                        <td class="text-color1">
                            @if (item.ContactDetail.Split('~').Length >= 1)
                            {
                                @item.ContactDetail.Split('~')[0]
                            }
                        </td>
                        <td class="text-color1">
                            @Html.DisplayFor(modelItem => item.OrganisationName)
                        </td>
                        <td class="text-color1">
                            @if (item.ContactDetail.Split('~').Length == 2)
                            {
                                @item.ContactDetail.Split('~')[1]
                            }
                        </td>
                        <td class="text-color1">
                            @item.DateAndTime.ToString("dd/MM/yyyy HH:mm:ss",CultureInfo.InvariantCulture)
                        </td>
                    </tr>
                    <tr class="rowEvenWithBottomBorder">
                        <td colspan="4" style="color: black;">
                            @if (!string.IsNullOrEmpty(item.Notes))
                            {
                                <div class="rnotes">Ref. no: @Html.Raw(item.NotificationCode)</div>
                                <div class="rnotes">Notes:&nbsp;@Html.Raw(item.Notes.Replace("\n", "<br/>"))</div>
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr class="bgColor2">
                    <td colspan="7" style="text-align: center; color:red">
                        @Resources.Resource.NoRecordFound
                    </td>
                </tr>
            }
        </table>
    </div>
</div>


