                                        </div>
                                    </div>
                                    <div class="row mb-1">
                                        <div class="col-sm-4 col-md-6 col-lg-5 pr-0">
                                            <label class="text-normal">@Resources.Resource.Telephone</label>
                                        </div>
                                        <div class="col-sm-4 col-md-4 col-lg-4 text-normal">
                                            @Html.DisplayFor(model => model.Telephone)
                                        </div>
                                    </div>
                                    <div class="row mb-1">
                                        <div class="col-sm-4 col-md-6 col-lg-5 pr-0">
