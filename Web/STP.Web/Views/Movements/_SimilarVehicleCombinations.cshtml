@model List<STP.Domain.VehiclesAndFleets.Configuration.VehicleConfigurationGridList>
@{ 
    bool FilteredVehicle = false;
    if (ViewBag.FilteredVehicle != null) {
        FilteredVehicle = ViewBag.FilteredVehicle;
    }
}
<div id="table-head">
    <span class="title">Select vehicle configuration</span>
    @*@if (!FilteredVehicle)
    {
    <span>
        <div class="button main-button mr-0">
            <button class="btn btn-outline-primary btn-normal btn_createnewcombination" role="button" aria-pressed="true">
                Create
                new combination
            </button>
        </div>
    </span>
    }*@
</div>
<div class="row" id="showtable">
    <div class="col-lg-12 col-md-12 col-sm-12" id="combination_list">
        <div class="main-table" style="height: 435px; overflow-y: auto; ">
            <table>
                @if (Model.Count == 0)
                {
                    <tr>
                        <td style="text-align: center">
                            <span style="color: red">No records found</span>
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @if (!FilteredVehicle)
                                {
									<div id="table-head" class="div_vehiclefoemovement" style="cursor:pointer;" data-configurationid="@item.ConfigurationId" data-flag=2>
                                    <span class="text-color2">@item.ConfigurationName</span>
                                    <span>
                                        @*<img src="assets/images/star-enabled.svg" width="20"
                                            alt="vehicle-2">*@
                                    </span>
                                </div>
                                }
                                else
                                {
                                <div id="table-head" class="div_filteredVehicle" style="cursor:pointer;" data-configurationid="@item.ConfigurationId" data-configName="@item.ConfigurationName" data-flag=2 >
                                    <span class="text-color2">@item.ConfigurationName</span>                                    
                                </div>
                                }
                            </td>
                        </tr>
                    }
                }
            </table>
        </div>
    </div>
</div>

