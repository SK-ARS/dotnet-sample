@using PagedList.Mvc
@model STP.Domain.MovementsAndNotifications.Notification.NENSOAReportModel
@using STP.Common.Constants
@using STP.Domain.MovementsAndNotifications.Notification
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var MonthList = new List<NENHelpdeskReportModel>
{
                        new NENHelpdeskReportModel {NumericMonth=1,Month  = "January"},
                        new NENHelpdeskReportModel {NumericMonth=2,Month = "February"},
                        new NENHelpdeskReportModel {NumericMonth=3,Month = "March"},
                        new NENHelpdeskReportModel {NumericMonth=4,Month = "April"},
                        new NENHelpdeskReportModel {NumericMonth=5,Month = "May"},
                        new NENHelpdeskReportModel {NumericMonth=6,Month = "June"},
                        new NENHelpdeskReportModel {NumericMonth=7,Month = "July"},
                        new NENHelpdeskReportModel {NumericMonth=8,Month = "August"},
                        new NENHelpdeskReportModel {NumericMonth=9,Month = "September"},
                        new NENHelpdeskReportModel {NumericMonth=10,Month = "October"},
                        new NENHelpdeskReportModel {NumericMonth=11,Month = "November"},
                        new NENHelpdeskReportModel {NumericMonth=12,Month = "December"}
                    };

    var YearList = new List<NENHelpdeskReportModel>
{
                        new NENHelpdeskReportModel {Year=DateTime.Now.Year},
                        new NENHelpdeskReportModel {Year=DateTime.Now.Year-1},
                        new NENHelpdeskReportModel {Year=DateTime.Now.Year-2},
                        new NENHelpdeskReportModel {Year=DateTime.Now.Year-3},
                        new NENHelpdeskReportModel {Year=DateTime.Now.Year-4},
                        new NENHelpdeskReportModel {Year=DateTime.Now.Year-5},
                        new NENHelpdeskReportModel {Year=DateTime.Now.Year-6},
                        new NENHelpdeskReportModel {Year=DateTime.Now.Year-7},
                        new NENHelpdeskReportModel {Year=DateTime.Now.Year-8}
                    };
}
@{
    ViewBag.PageMenuName = (int)STP.Common.Enums.WebMenuEnum.REPORTS;
}
<style>
    .redcolor {
        color: red;
        margin-top: 1rem !important;
    }

    .aligncenter {
        text-align: center;
    }

    #reports-Section {
        background-color: white;
    }
</style>
<div id="helpdesk">
    <!--main content -->
    <section id="banner">
        <div class="container-fluid" id="banner-container">

            <div id="register">
                <div id="reports-Section">

                    <div class="row pt-2 pb-2 pr-3 vehicle-setting">

                        <div class="col-lg-12 col-md-12 col-sm-12 pr-4 pl-4">
                            <div class="row">
                                <div class="col-lg-8 col-md-8 col-sm-12 text-normal title" style="margin-top:5px;">
                                    NEN Report Per Month
                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-12 text-normal" style="margin-top:10px;">
                                    <div class="row">
                                        <div class="col-lg-2 col-md-2 col-sm-12 text-normal" style="margin-top:5px;">
                                            @Resources.Resource.Period
                                        </div>
                                        <div class="col-lg-4 col-md-4 col-sm-12">
                                            @Html.DropDownListFor(m => m.Month, new SelectList(@MonthList, "NumericMonth", "Month"), new
                                       {
                                           @id = "DDStartMonth",
                                           @class = "form-select mb-3 mr-0 mb-0",
                                           @style = "overflow: scroll;width: 100%;color: rgba(39, 87, 149, 1);"
                                       })
                                        </div>
                                        <div class="col-lg-4 col-md-4 col-sm-12">
                                            @Html.DropDownListFor(m => m.Year, new SelectList(@YearList, "Year", "Year"), new
                                       {
                                           @id = "DDStartYear",
                                           @class = "form-select mb-3 mr-0 mb-0",
                                           @style = "overflow: scroll;width: 100%;color: rgba(39, 87, 149, 1);"
                                       })
                                        </div>
                                        <div class="col-lg-1 col-md-1 col-sm-12">
                                            <div class="flexer justify-content-center">
                                                <span>
                                                    <img src="/Content/assets/images/search-icon.svg" width="20" id="btnSearch" style="cursor:pointer;">
                                                </span>
                                            </div>
                                        </div>
                                    </div>

                                </div>


                            </div>
                        </div>
                    </div>
                    <div id="NENHelpdeskReport" style="margin: 1% 1% 1% 1% !important ">
                    </div>
                </div>

            </div>
        </div>

    </section>
</div>


<script src="~/Scripts/NENNotification/NEN_SOAReport.js?V@(Session["ProjectVersion"])"></script>
<script src="~/Scripts/NENNotification/_NEN_SOAReportHistory.js?V@(Session["ProjectVersion"])"></script>

