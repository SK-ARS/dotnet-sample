@{ 
    var NameFilter = Session["SearchStringNEN"]!=null ? Session["SearchStringNEN"].ToString():"";
    var UserDisableFlag = Session["IsvalNEN"] != null ?Convert.ToInt32(Session["IsvalNEN"]) :0;
    var checkedVal = UserDisableFlag == 1 ? "checked" : "";
}
<style>
    #filters .filter-list input::placeholder {
        font-style: italic;
        font-family: lato_light;
        padding-bottom: 0.5rem;
    }
</style>
<div id="filters" class="sidenav filter-sidenav p-0">
    <a href="#" class="closebtn close-filter-icon-common">&times;</a>
    <div class="filter-header" style="margin-top:3rem;">
        FILTER
    </div>
    <hr style="margin-top: 0;">
    @using (Html.BeginForm("ListNEHaulier", "NENNotification"))
    {
        <div class="filter-list">
            <div class="filter-entry">
                <div class="pr-0 pl-0 mr-0 ml-0 mt-4 mb-0">
                    <div class="row mt-4">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="row mb-2">
                                <div class="col-sm-12 col-md-6 col-lg-4 pr-0">
                                    <label class="text-normal">Haulier Name</label>
                                </div>
                                <div class="col-sm-12 col-md-6 col-lg-6 input-field">
                                    @*@Html.TextBox("searchString", null, new { @id = "SearchString", @class = "edit-normal", @placeholder = "Non ESDAL haulier name", @value = NameFilter })*@
                                    <input class="edit-normal" id="SearchString" name="searchString" placeholder="Non ESDAL haulier name" type="text" value="@NameFilter">
                                </div>
                            </div>
                            @*<div class="row mt-4">
                                    <div class="col-lg-2 col-sm-2 col-md-2">
                                        @Html.CheckBox("checkBoxVal", new { @class = "checkbox", @id = "ShowValid", @width = "28" })
                                    </div>
                                    <div class="col-lg-10 col-sm-10 col-md-10">
                                        <span>Show valid non esdal haulier</span>
                                    </div>
                                </div>*@
                            <div class="row mt-4">
                                <div class="col-lg-2 col-sm-2 col-md-2">
                                    <input class="checkbox" id="ShowValid" @checkedVal name="checkBoxVal" type="checkbox" width="28">
                                </div>
                                <div class="col-lg-10 col-sm-10 col-md-10">
                                    <span>Show valid non esdal haulier</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="row pt-6 pl-3 pr-2" id="org_filter_btn">
            <div class="col-lg-8 col-md-8 col-sm-12 filter-entry">
                <!-- <div class="header mt-4"> -->
                <div class="button mr-0 mb-2">
                    <button class="btn btn-outline-primary btn-normal btn-search-ne w-100" type="button" aria-pressed="true">
                        SEARCH
                    </button>
                </div>
                <!-- </div> -->
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 filter-entry">
                <!-- <div class="header mt-4"> -->
                <div class="button mr-0 mb-2">
                    <button class="btn btn-outline-primary btn-normal  btnClearNeUserFilter w-100" role="button" aria-pressed="true">
                        CLEAR
                    </button>
                </div>
                <!-- </div> -->
            </div>
        </div>

    }
</div>
@{
    ViewBag.Title = "SearchNeHaulierPanel";
}

@{
<input type="hidden" value="@ViewBag.pageSize" id="hf_pageSize" name="hf_pageSize" />
}
