@{
    <div class="modal-header pt-3 pb-3 pr-3 pl-3 pb-3s" style="display: contents;">
        <div class="row">
            <div class="col-lg-11 col-sm-11 col-md-11 pl-5 pt-8">
                <span class="text-normal pr-2" style="font-family: lato_light;font-size:24px;margin-top: -2rem;float: left;">
                    @ViewBag.Heading
                </span>
            </div>
            <div class="col-lg-1 col-sm-1 col-md-1 pr-4">
                <div style="justify-content: end;" id="table-head">
                    <span aria-hidden="true" class="close pl-0 ml-2 pt-1 CloseGeneralPopup"
                          data-dismiss="modal" aria-label="Close" id="IDCloseGeneralPopup"  style="cursor:pointer;">&times;</span>
                </div>
            </div>
        </div>
    </div>
    <div class="row pl-4 pr-4 pt-2 pb-3">
        <div class="col-lg-12 col-sm-12 col-md-2 pb-3">
            <span class="text-normal pr-2" style="font-size:1rem;float: left;">
                @ViewBag.Comment
            </span>
        </div>
    </div>
 
}
